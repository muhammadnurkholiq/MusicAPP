{{>head}}
{{>navbar}}

{{#if message}}
  <div class="alert alert-{{message.type}}" role="alert">
    {{message.message}}
  </div>
{{/if}}

<div class="card">
  <div class="card-header">
    <h1>{{title}}</h1>
  </div>
  <div class="card-body">
    <form action="/content/edit/{{music.0.id}}" method="post" id="formedit" enctype="multipart/form-data">
      <label for="title">Title</label>
      <br>
      <input type="hidden" name="id" value="{{music.0.id}}">
      <input type="text" name="title" placeholder="{{music_title}}" value="{{music.0.title}}">
      <br>
      <br>
      <label for="music">music</label>
      <br>
      <input type="file" id="file" aria-label="file upload" name="music">
      <br>
  </div>
      <div class="card-footer">
        <button type="submit">Add</button>
        <button type="reset">Reset</button>
      </div>
    </form>
</div>